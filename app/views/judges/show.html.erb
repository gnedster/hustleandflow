<!-- tables start
================================================== -->
<div class="container tablesb">
    <div class="row">

        <div class="span12 headlinecopy">
            <div class="infoheadline">
                <%= "#{@judge.full_name}"%>
            </div>

            <!-- tables start
           ================================================== -->

            <div class="container tablesb">
                <div class="row-fluid">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span5 judgebox">
                                <h4>Judge Profile</h4>
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr><td>Name: <%= "#{@judge.full_name}" %></td></tr>
                                        <tr><td>Agency: <%= "#{@judge.agency.titlecase}" %></td></tr>
                                        <tr><td>Position: <%= "#{@judge.position}" %></td></tr>
                                        <tr><td>Division: <%= "#{@judge.division}" %></td></tr>
                                    </tbody>
                                </table>
                                <hr class="featurette-divider">

                            </div>
                            <div class="span5">
                                <h4>Donors</h4>
                                <%=image_tag "doners.png" %>
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Donor</th>
                                            <th>Affiliation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% for @donor in @judge.donors %>
                                        <tr>
                                            <td><%= link_to "#{@donor.name.titlecase}", donor_path(@donor.id) %></td>
                                            <td><%= "#{@donor.affiliation.titlecase}" %></td>
                                        </tr>
                                    <% end %>
                                    </tbody>

                                </table>
                                <hr class="featurette-divider">
                            </div>
                            <div class="span5">
                                <h4>Gifts</h4>
                                <%=image_tag "gifts.png" %>
                                <table>
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for @gift in @judge.gifts %>
                                            <tr>
                                                <td><%= link_to "#{@gift.description.titlecase}", gift_path(@gift.id) %></td>
                                                <td><%= number_to_currency @gift.value %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>

                                </table>
                                <hr class="featurette-divider">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end tables -->