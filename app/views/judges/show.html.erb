<!-- tables start
================================================== -->

<div class="container tablesb">
    <div class="row">

        <div class="span12 headlinecopy">
            <div class="infoheadline">
                Information about what this is
            </div>

            <!-- tables start
           ================================================== -->

            <div class="container tablesb">
                <div class="row-fluid">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="span5 judgebox">
                                <h4>Judge Data</h4>
                                <img src="judges.png">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                                <hr class="featurette-divider">

                            </div>
                            <div class="span5 donerbox">
                                <h4>Donors</h4>
                                <img src="assets/doners.png">
                                <table>
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% for @donor in @judge.donors %>
                                        <tr>
                                            <td><%= link_to "#{@donor.name.titlecase}", donor_path(@donor.id) %></td>
                                            <td><%= "#{@donor.affiliation}" %></td>
                                        </tr>
                                    <% end %>
                                    </tbody>

                                </table>
                                <hr class="featurette-divider">
                            </div>
                            <div class="span5 giftbox">
                                <h4>Gifts</h4>
                                <img src="assets/gifts.png">

                                <table>
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for @gift in @judge.gifts %>
                                            <tr>
                                                <td><%= link_to "#{@gift.description.titlecase}", gift_path(@gift.id) %></td>
                                                <td><%= number_to_currency @gift.value %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>

                                </table>
                                <hr class="featurette-divider">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- end tables -->