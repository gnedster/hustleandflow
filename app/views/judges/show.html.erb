================================================== -->
<div class="container tablesb">
  <h2>
    <%= "#{@judge.full_name}" %>
  </h2>

  <div class="row">
    <!-- tables start
   ================================================== -->
    <div class="container tablesb">
      <div class="row">
          <table class="table table-hover">
            <thead>
            <tr>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>Name: <%= "#{@judge.full_name}" %></td>
            </tr>
            <tr>
              <td>Agency: <%= "#{@judge.agency.titlecase}" %></td>
            </tr>
            <tr>
              <td>Position: <%= "#{@judge.position}" %></td>
            </tr>
            <tr>
              <td>Division: <%= "#{@judge.division}" %></td>
            </tr>
            </tbody>
          </table>
      </div>
    </div>
    <hr class="featurette-divider">
    <div class="row">
        <h4>Donors</h4>
        <table>
          <thead>
          <tr>
            <th>Donor</th>
            <th>Affiliation</th>
          </tr>
          </thead>
          <tbody>
          <% for @donor in @judge.donors %>
              <tr>
                <td><%= link_to "#{@donor.name.titlecase}", donor_path(@donor.id) %></td>
                <td><%= "#{@donor.affiliation.titlecase}" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
<!-- end tables -->